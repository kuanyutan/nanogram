<div class='row'>
  <div class='col-sm-6 col-sm-offset-3'>
    <%= form_for @gram do |f| %>
      <% if @gram.errors.any? %>
        <div class='alert alert-danger'>
          <ul>
            <% @gram.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-group text-center'>
        <%= f.hidden_field :image_url, role: 'uploadcare-uploader', data: {crop: '600:600', 'images-only' => true} %>
      </div>

      <hr/>

      <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :country_code %>
        <%= f.country_select :location_code, { include_blank: true, priority_countries: ['SG', 'MY'] }, { class: 'form-control' } %>
      </div>

      <hr/>

      <div>
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
